<% title "Service Types" %>

<table>
  <tr>
    <th>Type No</th>
    <th>Type Text</th>
  </tr>
  <% for service_type in @service_types %>
    <tr>
      <td><%=h service_type.type_no %></td>
      <td><%=h service_type.name %></td>
      <td><%= link_to "Show", service_type %></td>
      <td><%= link_to "Edit", edit_service_type_path(service_type) %></td>
      <td><%= link_to "Destroy", service_type, :confirm => 'Are you sure?', :method => :delete %></td>
    </tr>
  <% end %>
</table>

<p><%= link_to "New Service Type", new_service_type_path %></p>
